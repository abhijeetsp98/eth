<%- include('./partials/header') -%>

<div class="ui main text container segment">
    <div class="ui huge header">New Transaction</div>
    <form class="ui form" action="/block" method="POST">
        
        <h1>Location Details</h1>
        <div class="field">
            <label>District</label>
            <input type="text" name="location[district]" placeholder="Nagpur">
        </div>
        <div class="field">
            <label>Taluka</label>
            <input type="text" name="location[taluka]" placeholder="Wadi">
        </div>

        <div class="field">
            <label>Village</label>
            <input type="text" name="location[village]" placeholder="Dharampeth">
        </div>
        <div class="field">
            <label>Khasra Number</label>
            <input type="text" name="location[khatraNo]" placeholder="20">
        </div>
        <div class="field">
            <label>Layout Number</label>
            <input type="text" name="location[layoutNo]" placeholder="69">
        </div>
        <div class="field">
            <label>Nagar</label>
            <input type="text" name="location[nagar]" placeholder="Title">
        </div>
        
        <h2>Name of Buyer and Seller</h2>
        <div class="field">
            <label>Seller Name</label>
            <input type="text" name="ownership[seller]" placeholder="Name">
        </div>
        <div class="field">
            <label>Buyer Name</label>
            <input type="text" name="ownership[buyer]" placeholder="Name">
        </div>
        <div class="field">
            <label>Date</label>
            <input type="text" name="ownership[date]" placeholder="Date">
        </div>

        <a class="ui extra blue button">Please enter the value carefully</a>
        <div class="ui inverted segment">
        <div class="field">
            <label>Seller Private key</label>
            <input type="text" name="ownership[fromAddress]" placeholder="Public key">
        </div>
        <div class="field">
            <label>Buyer Public key</label>
            <input type="text" name="ownership[toAddress]" placeholder="Public key">
        </div>
    </div>

        <input class="ui violet inverted button" type="submit"> 
    </form>
</div>

<%- include('./partials/footer') -%>